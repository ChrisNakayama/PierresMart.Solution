@{
  Layout = "_Layout";
}

@model PierresMart.Models.Flavor

<h2>Add a new flavor</h2>

@using (Html.BeginForm())
{
  <div class="mb-3">
    @Html.LabelFor(model => model.Name, new { @class = "form-label"})
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
  </div>

  <div class="mb-3">
    @Html.LabelFor(model => model.Ingredients, new { @class = "form-label"})
    @Html.TextAreaFor(model => model.Ingredients, new { @class = "form-control"})
  </div>

  <div class="mb-3">
    @Html.LabelFor(model => model.Instructions, new { @class = "form-label"})
    @Html.TextAreaFor(model => model.Instructions, new { @class = "form-control"})
  </div>

  <div class="mb-3">
    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId", ViewBag.TreatId, "Add Treat", new { @class = "form-control"})
  </div>
  
  <input type="submit" value="Save" class="btn btn-success" />
}