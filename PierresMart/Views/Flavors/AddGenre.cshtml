@{
  Layout = "_Layout";
}

@model PierresMart.Models.Flavor

<h2>Add a Treat</h2>

<h4>Add a Treat to this flavor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  
  <div class="mb-3">
    @Html.Label("Select Treat")
    @Html.DropDownList("TreatId", ViewBag.TreatId, "Add Treat", new { @class = "form-control"})
  </div>

  <input type="submit" value="Save" class="btn btn-success" />
}