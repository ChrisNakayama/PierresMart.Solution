@{
  Layout = "_Layout";
}

@model PierresMart.Models.Treat

<h2>Add a flavor</h2>

<p>Add a flavor to this Treat: @Html.DisplayFor(model => model.Name)</p>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  <div class="mb-3">
    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId",ViewBag.FlavorId, "Add flavor", new { @class = "form-control"})
  </div>

  <input type="submit" value="Add Flavor to Treat" class="btn btn-success" />
}